
Even = n.(
    Eq[Mod[n, 2], 0]
)


collatz = n.(
    Println[n]
    
    Break[Eq[n, 1], n]
    If[Even[n], Div[n, 2], Add[Mul[3, n], 1]]
)


main = args.(
    Assert[
        Less[len[args], 1]
        "No argument supplied"
    ]

    Assert[
        Not[IsNumber[Index[args, 0]]]
        "Argument must be an integer"
    ]

    Assert[
        Less[StrToNum[Index[args, 0]], 1]
        "Argument must be above 0"
    ]

    Loop[
        collatz, StrToNum[Index[args, 0]]
    ]
)
